{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/home/simon/miniconda3/envs/proformer_ce/bin/python" // Percorso dell'interprete Python del tuo ambiente Conda
        }
    ],
        // Forza l'esecuzione delle estensioni (come GitHub Copilot) sull'host Windows anche quando sei in WSL
    "remote.extensionKind": {
        "github.copilot": [
        "ui"
        ]
    },

    // Abilita il salvataggio automatico dei file
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,

    // Assicura che Copilot sia abilitato
    "github.copilot.enable": {
        "*": true
    }
}